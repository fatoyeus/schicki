<%- include('../../partials/header') %>
<%- include('../../partials/form_header') %>
<form action="/user/profile/new" id="profiledata" method="post">
	<div class="form-row mb-3">
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="text" name="username" id="username"value =<%=user.username%> disabled>
		</div>
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="email" name="email" id="email"placeholder="E-mail@example.com" autocomplete="off" required><span class="mx-3 mb-auto text-danger fs-6" style="position: absolute; z-index: 1030" id="email" ></span>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone" id="phone" placeholder="Phone" autocomplete="off" required><small>Format: 234-804-888-9999</small><span class="mx-3 mb-auto text-danger fs-6" style="position: absolute; z-index: 1030" id="phone"></span>
		</div>
		<div class="form-group col-md-6 col-xs-12 d-inline-flex">
			<label class="mr-3" for="birthday">Birthday</label>
			<input class="form-control" type="date" name="birthday" id="birthday" placeholder="birthday" min="1900-01-01" max="2010-01-01" autocomplete="off" required>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-4 col-xs-12">
			<input class="form-control" type="text" name="country" placeholder="Country" autocomplete="off" required>
		</div>
		<div class="form-group col-md-4 col-xs-12">
			<input class="form-control" type="text" name="state" placeholder="State" autocomplete="off" required>
		</div>
		<div class="form-group col-md-4 col-xs-12">
			<input class="form-control" type="text" name="city" placeholder="City" autocomplete="off" required>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-12 col-xs-12">
			<input class="form-control" type="text" name="address" placeholder="Address" autocomplete="off" required>
		</div>
	</div>
	<div class="form-row mb-3">
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="text" name="zipcode" placeholder="Zip Code" autocomplete="off" required>
		</div>
		<div class="form-group col-md-6 col-xs-12">
			<button class="btn btn-success shadow" type="submit" id="submitbtn">Submit</button>
		</div>
	</div>
</form>
<%- include('../../partials/form_footer') %>
<script src="/sc_static/lib/utilities.js" type="text/javascript"></script>
<script src="/sc_static/scripts/newprofile.js" type="text/javascript"></script>
<%- include('../../partials/footer') %>