<%- include('../../partials/header') %>
<%- include('../../partials/vendordash_header.ejs') %>	
<div class="container col-md-8 col-xl-6 mt-5">
	<div class="container mt-2">
		<div class="row">
			<div class="container d-flex flex-column mb-2">
			<div class="align-self-center">
				<h2 class="text-capitalize"><%=store.storename%> Inventory</h2>
			</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12" id="inventorydetail">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded shadow mt-3 p-3">
					<div class="row col-lg-6">
						<div class="container d-flex flex-column">
							<div>
								<h4 class="text-capitalize my-auto" ><%=store.storename%></h4>
							</div>
						</div>
					</div>
					<div class="row col-lg-3">
							<div class="container d-flex flex-column">
								<div class="align-self-center">
								<a class="btn btn-warning btn-md text-nowrap shadow" href="/inventory/<%=store._id%>/editItem">Manage Items</a>
								</div>
							</div>
						</div>
					<div class="row col-lg-3">
						<div class="container d-flex flex-column">
							<div clas="align-self-center">
								<a class="btn btn-success btn-md shadow" href="/inventory/<%=store._id%>/newItem">New Item</a>
							</div>
						</div>
					</div>	
				</div>
			</div>
		</div>
		<form action="/" method="" id="">
		<div class="row">
			<div class="col-lg-12" id="inventorydetail">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
					<div class="row col-lg-10 mx-auto">
						<div class="container d-flex flex-column justify-content-center">
							<div class="align-self-center">
								<input type="file" class="custom-file-input" id="productimage">
								<label class="custom-file-label" for="productimage">Upload Image</label>
							</div>
						</div>
					</div>						
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12" id="inventorydetail">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
					<div class="row col-lg-4">
						<div class="container d-flex flex-column justify-content-center">
							<div class="align-self-center">
								<label class="text-capitalize my-auto" >Product Name</label>
							</div>
						</div>
					</div>
					<div class="row col-lg-8">
							<div class="container d-flex flex-column">
								<div>
								<input type="text" class="form-control" name="productname" id="productname">
								</div>
							</div>
						</div>
						
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12" id="inventorydetail">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
					<div class="row col-lg-4">
						<div class="container d-flex flex-column justify-content-center">
							<div class="align-self-center">
								<label class="text-capitalize my-auto" >Description</label>
							</div>
						</div>
					</div>
					<div class="row col-lg-8">
							<div class="container d-flex flex-column">
								<div>
									<textarea type="text" class="form-control" name="productname" id="productname"></textarea>
								</div>
							</div>
						</div>
						
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6" id="sku">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
					<div class="row col-lg-4">
						<div class="container d-flex flex-column justify-content-center">
							<div class="align-self-center">
								<label class="text-capitalize my-auto" >SKU</label>
							</div>
						</div>
					</div>
					<div class="row col-lg-8">
							<div class="container d-flex flex-column">
								<div>
									<input type="text" class="form-control" name="sku" id="sku">
								</div>
							</div>
						</div>
						
				</div>
			</div>
			<div class="col-lg-6" id="stock">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
					<div class="row col-lg-4">
						<div class="container d-flex flex-column justify-content-center">
							<div class="align-self-center">
								<label class="text-capitalize my-auto" >Stock</label>
							</div>
						</div>
					</div>
					<div class="row col-lg-8">
							<div class="container d-flex flex-column">
								<div>
									<select class="custom-select">
									  <option selected>Stock</option>
									  <%for(var stock = 1; stock <= 50; stock++ ){%>
									  <option value="<%=stock%>"><%=stock%></option>
									  <%}%>
									</select>
								</div>
							</div>
						</div>
						
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12" id="inventorydetail">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
					<div class="row col-lg-10 mx-auto">
						<div class="container d-flex flex-column">
							<div class="align-self-center">
								<button class="btn btn-success btn-md text-nowrap shadow">Submit</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		</form>
	</div>
</div>
<script src="/sc_static/scripts/user/storeassignment.js" type="text/javascript"></script>
<%- include('../../partials/vendordash_footer.ejs') %>
<%- include('../../partials/footer') %>