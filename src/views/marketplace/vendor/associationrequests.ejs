<%- include('../../partials/header') %>
<%- include('../../partials/userdash_header.ejs') %>
<div class="container col-md-8 col-xl-6 mt-5">
	<div class="flex-column justify-content-center my-auto">
		<div class="container d-flex flex-row justify-content-center mb-5">
			<div class="row mb-3 d-flex align-items-center">
				<h2 class="text-capitalize" id="assoc-header">Association Requests</h2>
			</div>
		</div>	
		<div class="container d-flex" id="associatedvendor-tab">
			<div class="container" id="associatedvendorfixed" aria-labelledby="associatedvendor-tab">
				<%asusers.forEach((user)=>{%>
				<div class="container d-flex flex-row border border-secondary rounded my-3" id="associateduser">
					<div class="d-flex flex-row  align-self-center col-lg-8">
						<div class="container d-flex flex-column">
							<div clas="align-self-start">
								<h5 class="text-capitalize text-light mt-2 mb-0" id="assoc-vendor"><%=user.username%></h5>
							</div>
							<div clas="align-self-end">
								<p class="font-italic font-weigt-lighter text-secondary mt-0 mb-0" id="assoc-rdate">Request: <%=user.daterequested.toISOString()%></p>
								<p class="font-italic font-weigt-lighter text-secondary mt-0 mb-2" id="assn-status">Status: <%if(user.status === 100101){%>
	Requested
<%}if(user.status === 100102){%>
	Granted	
<%}if(user.status === 100103){%>
	Accepted								
<%}%>									
								</p>
							</div>
						</div>
					</div>	
					<div class="d-flex flex-row align-self-center col-lg-4" id="btn-div">
						<div class="container d-flex flex-row justify-content-between p-2">
<%if(user.status === 100101){%>
							<button class="btn btn-success btn-md shadow" id="assoaccept"><data id="user_accept_id" value = "<%=user.id%>">Accept</data></button>
							<button class="btn btn-danger btn-md shadow" id="assocancel"><data id="user_reject_id" value = "<%=user.id%>">Reject</data></button>
<%}else if(user.status === 100102){%>
							<button class="btn btn-danger btn-md shadow" id="assodis"><data id="user_dissoc_id" value = "<%=user.id%>">Disassociate</data></button>
<%}else if(user.status === 100103){%>
							<button class="btn btn-success btn-md shadow" id="assoadm"><data id="user_admit_id" value = "<%=user.id%>">Admit</data></button>
<%}%>		
							
						</div>
					</div>
				</div>
				<%})%>
				<%if(asusers.length === 0){%>
				<div class="container d-flex flex-row border border-secondary rounded" id="noassociateduser">
					<div class="d-flex flex-row justify-content-center p-3 col-lg-12">
						<div clas="d-flex p-2">
							<h5 class="text-capitalize text-light" id="assoc-vendor">You Have No Association Requests</h5>
						</div>
					</div>	
				</div>
				<%}%>
			</div>
			
		</div>
	</div>
</div>
<%- include('../../partials/userdash_footer.ejs') %>
<script src="/sc_static/scripts/marketplace/vendor/associationrequests.js" type="text/javascript"></script>

<%- include('../../partials/footer') %> 