<%- include('../../partials/header') %>

<form action="/vendor_id/products/register" method="post">
	<input type="text" name="productname" placeholder="Product Name">
	<input type="text" name="description" placeholder="Describe Product">
	<input type="text" name="prodCat" placeholder="Describe Product">
	<input type="text" name="sku" placeholder="product sku">
	<input type="number" name="price" placeholder="price" min="0.01" step="0.01">
	<input type="number" name="inventory" placeholder="inventory" min="1" step="1">
	<div class="form-group">
		<label for="productUpload">Upload image .jpg .png </label>
		<input type="file" class="form-control-file" name="productImage" id="productUpload" accept="image/png, image/jpeg">
	</div>
	
	<div>
		<label class="my-1 mr-2" for="productCategory">Product Category</label>
		  <select class="custom-select my-1 mr-sm-2" id="productCategory">
			<option selected>Choose...</option>
			<option value="Hair">Hair</option>
			<option value="Cream">Cream</option>
			<option value="Dress">Dress</option>
			<option value="Pants">Pants</option>
			<option value="Shirts">Shirts</option>  
		  </select>		
	</div> 
	
	<button id="submitButton">Submit</button>
</form>
<script src="/scripts/register.js" type="text/javascript"></script>
<%- include('../../partials/footer') %>