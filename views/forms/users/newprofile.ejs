<%- include('../../partials/header') %>
<%- include('../../partials/form_header') %>
<form action="/user/profile/new" method="post">
	<div class="form-row">
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="text" name="username" id="username"value =<%=user.username%> disabled>
		</div>
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="text" name="email" id="email"placeholder="E-mail@example.com">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone" id="phone" placeholder="Phone" required><small>Format: 234-804-888-9999</small>
		</div>
		<div class="form-group col-md-6 col-xs-12 d-inline-flex">
			<label class="mr-3" for="birthday">Birthday</label>
			<input class="form-control" type="date" name="birthday" id="birthday" placeholder="birthday" min="1900-01-01" max="2010-01-01">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-4 col-xs-12">
			<input class="form-control" type="text" name="country" placeholder="Country">
		</div>
		<div class="form-group col-md-4 col-xs-12">
			<input class="form-control" type="text" name="state" placeholder="State">
		</div>
		<div class="form-group col-md-4 col-xs-12">
			<input class="form-control" type="text" name="city" placeholder="City">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-12 col-xs-12">
			<input class="form-control" type="text" name="address" placeholder="Address">
		</div>
	</div>
	<div class="form-row mb-3">
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="text" name="zipcode" placeholder="Zip Code">
		</div>
		<div class="form-group col-md-6 col-xs-12">
			<button class="btn btn-success shadow" id="submitButton">Submit</button>
		</div>
	</div>
</form>
<%- include('../../partials/form_footer') %>
<%- include('../../partials/footer') %>