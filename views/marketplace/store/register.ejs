<%- include('../../partials/header') %>
<%- include('../../partials/vendordash_header.ejs') %>	
<div class="col-lg-6 d-flex flex-column justify-content-center my-auto" id="createstore">
	<div class="container d-flex flex-row justify-content-center">
		<div class="row mb-3 d-flex align-items-center">
			<h2 class="text-capitalize" id="cstore-header">Create Store</h2>
		</div>
	</div>	
	<form action="/store/create" method="post" id="storecreate">
	<div class="container flex-column justify-content-center my-1">
		<div class="container my-auto p-4">
			<div class="d-flex flex-row justify-content-center mb-5 p-auto">
				<div class="form-row w-50">
						<div class="form-group col-md-12 col-xs-12">
							<input class="form-control" type="text" name="storename" id="storename" placeholder="Give store a name" autocomplete="off"><span class="mx-3 mb-auto" style="position: absolute; z-index: 1030" id="storesearch" hidden></span>
						</div>
					</div>
				</div>
		<div class="d-flex flex-row justify-content-center my-auto p-auto">
			<div class="form-row w-50">
				<div class="form-group col-md-12 col-xs-12">
				<textarea class="form-control" type="text" name="description" id="storedescr" placeholder="Deescribe store" hidden></textarea>
				</div>
			</div>
		</div>
			<div class="d-flex flex-row justify-content-center my-5 p-auto">
				
					<div class="form-row w-50">
						<div class="form-group col-md-12 col-xs-12">
							
							<select class="form-control custom-select" name="category" id="storecat" hidden>
							  <option selected>Choose Category</option>
							  <%cat.forEach((category)=>{ %>
							  <option value="<%=category.name%>"><%=category.name%></option>
							  <%})%>
							</select>
							
						</div>
					</div>
				
			</div>
			<div class="d-flex flex-row justify-content-center my-5 p-auto">
				
					<div class="form-row">
						<div class="form-group col-md-8 col-xs-12">
							<button class="btn btn-success text-nowrap mz-3 mt-3 mb-5 shadow" id="submitButton" hidden>Create Store</button>
						</div>
					</div>
				
			</div>
		</div>
	</div>
	</form>
</div>
<%- include('../../partials/vendordash_footer.ejs') %>	
<script src="/sc_static/scripts/store.js" type="text/javascript"></script>

<%- include('../../partials/footer') %> 