<%- include('../../partials/header') %>
	<div class="container col-md-8 d-flex flex-column justify-content-center my-auto">
		<div class="container d-flex flex-column">
				<div class="container d-flex flex-row justify-content-sm-center border border-secondary rounded my-2 p-4">
					<div class="row mb-3 d-flex align-items-center">

							<h1 class="text-capitalize"><%=user.fullName%></h1>

					</div>
				</div>
		</div>	
		<div class="container d-flex flex-column">
			<dl>
				<div class="container d-flex flex-column justify-content-sm-center border border-secondary rounded my-3 p-4">
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Firstname</dt>
							<dd class="col-sm-6"><%=user.fname%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Lastname</dt>
							<dd class="col-sm-6"><%=user.lname%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Username</dt>
							<dd class="col-sm-6"><%=user.username%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Birthday</dt>
							<dd class="col-sm-6"><%=userProfile.birthday_id.birthday.toDateString()%></dd>
						</div>
						<div class="d-flex flex-row ml-auto">
							<a class="btn btn-secondary" href="#">Edit</a>
						</div>
				</div>
				<div class="container d-flex flex-column justify-content-sm-center border border-secondary rounded my-3 p-4">
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Email</dt>
							<dd class="col-sm-6"><%=userProfile.contact_id.userEmail_id.email%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Phone Number</dt>
							<dd class="col-sm-6"><%=userProfile.contact_id.userPhone_id.phone%></dd>
						</div>
						<div class="d-flex flex-row ml-auto">
							<a class="btn btn-secondary" href="#">Edit</a>
						</div>
				</div>	
				<div class="container d-flex flex-column justify-content-sm-center border border-secondary rounded my-3 p-4">
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Country</dt>
							<dd class="col-sm-6"><%=userProfile.contact_id.userLocation_id.country%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Address</dt>
							<dd class="col-sm-6"><%=userProfile.contact_id.userLocation_id.address%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">City</dt>
							<dd class="col-sm-6"><%=userProfile.contact_id.userLocation_id.city%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">State</dt>
							<dd class="col-sm-6"><%=userProfile.contact_id.userLocation_id.state%></dd>
						</div>
						<div class="d-sm-flex flex-row p-auto">
							<dt class="col-sm-6">Zip Code</dt>
							<dd class="col-sm-6"><%=userProfile.contact_id.userLocation_id.zipcode%></dd>
						</div>
						<div class="d-flex flex-row ml-auto">
							<a class="btn btn-secondary" href="#">Edit</a>
						</div>
				</div>
			</dl>
			
				
		</div>
		
	</div>
<%- include('../../partials/footer') %>