<%- include('../../partials/header') %>
<%- include('../../partials/form_header') %>
<form action="/register" method="post">
	<div class="form-row">
		<div class="form-group col-md-6 col-xs-12">
		<input class="form-control" type="text" name="fname" placeholder="firstname">
		</div>
		<div class="form-group col-md-6 col-xs-12">
		<input class="form-control" type="text" name="lname" placeholder="lastname">
		</div>
	</div>
	<div class="form-row">
	<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<input class="form-control" type="text" name="username" placeholder="username">
	</div>
	<div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-6">
		<div class="form-check">
		<input class="form-check-input" type="radio" name="sex" id="male" value="Male">
	    <label class="form-check-label" for="male">Male </label>
		</div>
	</div>
	<div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-6">
		<div class="form-check">
		<input class="form-check-input" type="radio" name="sex" id="female" value="Female">
	    <label class="form-check-label" for="female">Female </label>
		</div>
	</div>
	</div>
	<div class="form-row">
	<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<input class="form-control" id="pw1" type="password" name="password" placeholder="password">
	</div>
	<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<span id="pwerror" hidden>passwords do not match</span>
	</div>
	</div>
	<div class="form-row">
	<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
	<input class="form-control" id="pw2" type="password" name="cpassword" placeholder="confirm password">
	</div>
	<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<span id="pwerror" hidden>passwords do not match</span>
	</div>
	</div>
	<button class="btn btn-success mz-3 mt-3 mb-5 shadow" id="submitButton">Submit</button>
</form>

<%- include('../../partials/form_footer') %>
<script src="/sc_static/scripts/register.js" type="text/javascript"></script>
<%- include('../../partials/footer') %>