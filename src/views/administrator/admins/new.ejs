<%- include('../../partials/header') %>
<div class="container col-md-8 col-xl-6 mt-5">
	<div class="container d-flex flex-column justify-content-sm-between border border-secondary rounded mt-1 my-1 p-4">
		<div class="container mt-2">
			<div class="container d-flex flex-column mb-1">
				<div class="align-self-start">
					<h2 class="text-capitalize">Create Admin</h2>
				</div>
			</div>

			<div class="container d-flex flex-column"> 

			<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-1 my-1 p-4">
							<div class="row col-lg-12">
								<div class="container d-flex flex-column">
									<form action="/admin/new/profile" method="post">
										<div class="form-row">
											<div class="form-group col-md-6 col-xs-12">
											   <input class="form-control" type="text" name="fname" placeholder="firstname">
											</div>
											<div class="form-group col-md-6 col-xs-12">
											   <input class="form-control" type="text" name="lname" placeholder="lastname">
											</div>
										</div>
										<div class="form-row">
											<div class="form-group col-md-6 col-xs-12">
											   <input class="form-control" type="text" name="username" placeholder="username">
											</div>
											<div class="form-group col-md-6 col-xs-12">
											   <input class="form-control" type="text" name=email placeholder="email@example.com">
											</div>
										</div>
										<div class="form-row">
											<div class="form-group col-md-6 col-xs-12">
												<input class="form-control" id="pw1" type="password" name="password" placeholder="password"><span id="pwerror" hidden>passwords do not match</span>
											</div>
											<div class="form-group col-md-6 col-xs-6 d-inline-flex">
												<label for="privSel" class="w-75">Priviledge</label>
												<select class="form-control" class="w-25 p-3" id="privSel" >
													<option>1</option>
													<option>2</option>
													<option>3</option>
													<option>4</option>
													<option>5</option>
													<option>6</option>
													<option>7</option>
													<option>8</option>
													<option>9</option>
													<option>10</option>
													<option>11</option>
													<option>12</option>
													<option>13</option>
													<option>14</option>
													<option>15</option>
												</select>
											</div>
										</div>
										<div class="form-row">
											<div class="form-group col-md-6 col-xs-12">
												<input class="form-control" id="pw2" type="password" name="cpassword" placeholder="confirm password"><span id="pwerror" hidden>passwords do not match</span>
											</div>
										</div>
										<button class="btn btn-success mz-3 mt-3 shadow" id="submitButton">Submit</button>
									</form>
								</div>
							</div>

			</div>	
			</div>

		</div>
	</div>
</div>


<script src="/sc_static/scripts/register.js" type="text/javascript"></script>
<%- include('../../partials/footer') %>