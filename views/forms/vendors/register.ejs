<%- include('../../partials/header') %>
<%- include('../../partials/form_header') %>
<form action="/vendor/enroll" method="post">
	<div class="form-row">
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control"type="text" name="username" value =<%=user.username%> disabled>
		</div>	
		<div class="form-group col-md-6 col-xs-12">
			<input class="form-control" type="text" name="vendorname" placeholder="Business Name">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6 col-xs-12">
		<input class="form-control" type="email" name="email" placeholder="email@example.com">
		</div>
		<div class="form-group col-md-6 col-xs-12">
		<input class="form-control" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone" id="phone" placeholder="Business Phone" required><small>Format: 234-804-888-9999</small>
		</div>
	</div>
	<div class="form-row">
	<div class="form-group col-md-6 col-xs-12">
		<input class="form-control" type="text" name="country" placeholder="Country">
	</div>
	<div class="form-group col-md-6 col-xs-12">
		<input class="form-control" type="text" name="state" placeholder="State">
	</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-12 col-xs-12">
		<input class="form-control" type="text" name="address" placeholder="Address">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-4 col-xs-12">
		<input class="form-control" type="text" name="city" placeholder="City">
		</div>
		<div class="form-group col-md-4 col-xs-12">
		<input class="form-control" type="text" name="zipcode" placeholder="Zip Code">
		</div>
		<div class="form-group col-md-4 col-xs-12">
		<button class="btn btn-success" id="submitButton">Submit</button>
		</div>
	</div>
</form>
<%- include('../../partials/form_footer') %>
<%- include('../../partials/footer') %>