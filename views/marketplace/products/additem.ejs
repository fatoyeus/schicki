<!DOCTYPE html>
<html lang="en">
	<div id="additemdiv">
		<form method="post" id="addnewitem" name="productform" enctype="multipart/form-data">
			<div class="form-row">
				<div class=" form-group col-lg-12" id="inventorydetail">
					<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
						<div class="row col-lg-4">
							<div class="container d-flex flex-column justify-content-center">
								<div class="align-self-center">
									<label class="text-capitalize my-auto" >Product Name</label>
								</div>
							</div>
						</div>
						<div class="row col-lg-8">
								<div class="container d-flex flex-column">
									<div>
									<input type="text" class="form-control" name="productname" id="productname" required>
									</div>
								</div>
							</div>

					</div>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-lg-12" id="inventorydetail">
					<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
						<div class="row col-lg-4">
							<div class="container d-flex flex-column justify-content-center">
								<div class="align-self-center">
									<label class="text-capitalize my-auto" >Description</label>
								</div>
							</div>
						</div>
						<div class="row col-lg-8">
								<div class="container d-flex flex-column">
									<div>
										<textarea type="text" class="form-control" name="description" id="description" required></textarea>
									</div>
								</div>
							</div>

					</div>
				</div>
			</div>
			<div class="form-row">
				<div class="col-lg-6" id="sku">
						<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
							<div class="row col-lg-4">
								<div class="container d-flex flex-column justify-content-center">
									<div class="align-self-center">
										<label class="text-capitalize my-auto" >SKU</label>
									</div>
								</div>
							</div>
							<div class="row col-lg-8">
									<div class="container d-flex flex-column">
										<div>
											<input type="text" class="form-control" name="sku" id="sku" required>
										</div>
									</div>
								</div>

						</div>
					</div>
				<div class="col-lg-6" id="stock">
						<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
							<div class="row col-lg-4">
								<div class="container d-flex flex-column justify-content-center">
									<div class="align-self-center">
										<label class="text-capitalize my-auto" >Stock</label>
									</div>
								</div>
							</div>
							<div class="row col-lg-8">
									<div class="container d-flex flex-column">
										<div>
											<select class="form-control custom-select" name="stockunits" id="stockunits" required>
											  <option selected>Stock</option>
											  <%for(var stock = 1; stock <= 50; stock++ ){%>
											  <option value="<%=stock%>"><%=stock%></option>
											  <%}%>
											</select>
										</div>
									</div>
								</div>

						</div>
					</div>
			</div>
			<div class="form-row">
				<div class="col-lg-12" id="inventorydetail">
					<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
						<div class="row col-lg-10 mx-auto">
							<div class="container d-flex flex-column justify-content-center">
								<div class="form-group align-self-center">
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
										</div>
										<div class="custom-file">
											<label class="custom-file-label" for="productimg">Choose Image</label>
											<input type="file" class="custom-file-input" id="productimg" name="productimg" accept="image/png, image/jpeg"  aria-describedby="inputGroupFileAddon01" required>
										</div>
									</div>
								</div>
							</div>
						</div>						
					</div>
				</div>
			</div>
			<div class="form-row">
				<div class="col-lg-8" id="price">
					<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
						<div class="row col-lg-12">
							<div class="container d-flex flex-column">
								<div class="input-group">
									<div class="input-group-prepend">
											<span class="input-group-text" id="inputGroupPrice01">Price</span>
										</div>
									 <input type="Number" class="form-control" min="0.01" max="1000000.00" aria-label="Dollar amount (with dot and two decimal places)">
									  <div class="input-group-append">
											<span class="input-group-text">NGN</span>
											<span class="input-group-text">0.00</span>
									  </div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4" id="inventorydetail">
					<div class="container d-flex flex-row justify-content-sm-between mt-3 p-3">
						<div class="row col-lg-10 mx-auto">
							<div class="container d-flex flex-column">
								<div class="align-self-center">
									<button class="btn btn-success btn-lg text-nowrap shadow" type="submit" id="additem" data-storeId="<%=storeId%>" data-inventoryId="<%=inventoryId%>">Add</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</html>