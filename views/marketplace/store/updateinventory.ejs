<%- include('../../partials/header') %>
<%- include('../../partials/vendordash_header.ejs') %>	
<div class="container col-md-8 col-xl-6 mt-5">
	<div class="container mt-2">
		<div class="row">
			<div class="container d-flex flex-column mb-2">
			<div class="align-self-center">
				<h2 class="text-capitalize"><%=store.storename%> Inventory</h2>
			</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12" id="inventorydetail">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded shadow mt-3 p-3">
					<div class="row col-lg-6">
						<div class="container d-flex flex-column">
							<div>
								<h4 class="text-capitalize my-auto" ><%=store.storename%></h4>
							</div>
						</div>
					</div>
					<div class="row col-lg-3">
							<div class="container d-flex flex-column">
								<div class="align-self-center">
								<a class="btn btn-outline-warning btn-md text-nowrap shadow" id="manageitemsbtn" data-id="<%=store.inventory%>" data-storeId="<%=store._id%>">Manage Items</a>
								</div>
							</div>
						</div>
					<div class="row col-lg-3">
						<div class="container d-flex flex-column">
							<div clas="align-self-center">
								<a class="btn btn-outline-success btn-md text-nowrap shadow" id="newitembtn" data-id="<%=store.inventory%>" data-storeId="<%=store._id%>">New Item</a>
							</div>
						</div>
					</div>	
				</div>
			</div>
		</div>
		<div id="inventoryplug">
			<div id="spinnerplug" hidden>
				<div class="d-flex justify-content-center bg-dark mt-5" id="spinnerdiv" >
					<div class="spinner-border text-light mt-5" style="width: 3rem; height: 3rem;" role="status">
						 <span class="sr-only">Loading...</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="/sc_static/scripts/user/inventory.js" type="text/javascript"></script>
<%- include('../../partials/vendordash_footer.ejs') %>
<%- include('../../partials/footer') %>