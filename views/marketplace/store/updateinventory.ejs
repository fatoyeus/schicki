<%- include('../../partials/header') %>
<%- include('../../partials/vendordash_header.ejs') %>	
<div class="container col-md-8 col-xl-6 mt-5">
	<div class="container mt-2">
		<div class="row">
			<div class="container d-flex flex-column mb-2">
			<div class="align-self-center">
				<h2 class="text-capitalize"><data id="store_id" value="<%=store._id%>"><%=store.storename%> Inventory</data></h2>
			</div>
		</div>
		</div>
		<div class="row">
			<div class="col-lg-12" id="inventorydetail">
				<div class="container d-flex flex-row justify-content-sm-between border border-secondary rounded mt-3 p-3">
					<div class="row col-lg-3">
						<div class="container d-flex flex-column">
							<div clas="align-self-start"><h4 class="text-capitalize mt-2 mb-0" ><data id="store-header" value="<%=store._id%>"><%=store.storename%></data></h4>
						</div>
					</div>
					<div class="row col-lg-3">
						<div class="container d-flex flex-column">
							<a class="btn btn-success btn-lg shadow" href="/inventory/<%=store._id%>/editItem">Edit Item</a>
						</div>
					</div>
					<div class="row col-lg-3">
						<div class="container d-flex flex-column">
							<a class="btn btn-success btn-lg shadow" href="/inventory/<%=store._id%>/newItem">New Item</a>
						</div>
					</div>
				</div>	
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 mt-3">
				<div class="border border-secondary rounded p-3" id="a_storemanagers">
							<div class="container d-flex flex-row">
								<h6 class="text-secondary">
									<p class="mb-0"> Assign Store Manager</p>
								</h6>
							</div>
							<form enctype="multipart/form-data" method="POST" name="assignuser">
								<div class="form-row align-items-center">
									<div class="form-group col-md-9 col-xs-9 mb-0">
										<select class="form-control custom-select-sm" name="selectedassign" id="selectedassign">
											 <option selected>Choose User</option>
											<%users.forEach((user)=>{%>
											 <option value="<%=user._id%>"><%=user.fullName + ` - ( ` + user.username + ` )`%></option>
											<%})%>
										</select>
									</div>
									<div class="form-group  col-md-3 col-xs-3 mb-0">
										<button class="btn btn-sm btn-success form-control" id="assignbtn" type="submit" >Assign</button>
									</div>
								</div>
							</form>
				</div>
			</div>
			<div class="col-lg-4 mt-3">
				<div class="border border-secondary rounded p-3">
					<div class="container d-flex flex-row">
						<h6 class="text-secondary">
							<p class="mb-0">Publish Store</p>
						</h6>
					</div>
					<div class="">
						<button class="btn btn-sm btn-success form-control" id="assignbtn" type="submit" >Publish</button>
					</div>
				</div>	
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 mt-3">
						<div class="border border-secondary rounded p-3" id="r_storemanagers">
							<div class="container d-flex flex-row">
								<h6 class="text-secondary">
									<p class="mb-0">
									 Remove Store Manager
									</p>
								</h6>
							</div>
							<form id="removeuser" name="removeuser">
								<div class="form-row align-items-center">
									<div class="form-group col-md-9 col-xs-9 mb-0">
										<select class="form-control custom-select-sm" name="selectedremove" id="selectedremove">
											 <option selected>Choose User</option>
													  <%store.users.forEach((user)=>{ %>
											 <option value="<%=user._id%>"><%=user.fullName + ` - ( ` + user.username + ` )`%></option>
													  <%})%>
										</select>
									</div>
									<div class="form-group  col-md-3 col-xs-3 mb-0">
										<button class="btn btn-sm btn-danger form-control" id="removebtn" type="submit">Remove</button>
									</div>
								</div>
							</form>
						</div>
			</div>
			<div class="col-lg-4 mt-3">
				<div class="border border-secondary rounded p-3">
					<div class="container d-flex flex-row">
						<h6 class="text-secondary">
							<p class="mb-0">Close Store</p>
						</h6>
					</div>
					<div class="">
						<button class="btn btn-sm btn-danger form-control" id="assignbtn" type="submit" >Close</button>
					</div>
				</div>	
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 mt-3">
				<div class="border border-secondary rounded p-3">
					<div class="container d-flex flex-row">
						<h6 class="text-secondary">
							<p class="mb-0">Create Inventory</p>
						</h6>
					</div>
					<form action="/store/<%=store._id%>/createInventory" method="POST">
						<div class="form-group">
						<%if(store.inventory){%>
						<button class="btn btn-sm btn-success form-control" type="submit" disabled>Create Inventory</button>
						<%}else{%>
						<button class="btn btn-sm btn-success form-control" id="createInventory" type="submit" >Create Inventory</button>
						<%}%>
					</div>	
					</form>
				</div>	
			</div>
			<div class="col-lg-6 mt-3">
				<div class="border border-secondary rounded p-3">
					<div class="container d-flex flex-row">
						<h6 class="text-secondary">
							<p class="mb-0">Manage Inventory</p>
						</h6>
					</div>
					<form>
						<div class="form-group">
						<%if(store.inventory){%>
						<a class="btn btn-sm btn-success form-control" href="/inventory/<%=store.inventory%>/management">Manage Inventory</a>
						<%}else{%>
						<a class="btn btn-sm btn-success form-control" href="#createInventory">Manage Inventory</a>
						<%}%>
						</div>
					</form>
				</div>	
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 mt-3">
				<form action="/inventory/<%=inventory._id%>" method="POST">
					<div class="border border-secondary rounded p-3">
						<div class="container d-flex flex-row justify-content-center">
							<input class="btn btn-lg btn-danger" type="submit" Value="Post Item" >
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script src="/sc_static/scripts/user/storeassignment.js" type="text/javascript"></script>
<%- include('../../partials/vendordash_footer.ejs') %>
<%- include('../../partials/footer') %>