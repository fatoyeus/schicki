<%- include('../../partials/header') %>
<%- include('../../partials/admindash_header.ejs') %>	
<div class="container col-md-8 col-xl-6 mt-5">
	<div class="container d-flex justify-content-center mb-5">
		<div class="row mb-3 d-flex align-items-center">
			<h2 class="text-capitalize" id="cstore-header">Manage Store Category</h2>
		</div>
	</div>	
	<div class="container d-flex justify-content-center my-5">
		
			<div class="d-flex flex-row">
				<div class="d-inline-flex col-lg-8">
					<input class="form-control" type="text" name="storecat" id="storecat" placeholder="Add New Category">
				</div>
				<div class="d-inline-flex col-lg-4">
					<button class="btn btn-success text-nowrap" type="submit" id="stcbutton">Add</button>
				</div>
			</div>
		
	</div>
	<div class="container d-flex justify-content-center table-responsive-lg">
		<table class="table table-dark table-borderless ml-5">
			<tbody class="container">
				<tr class="row">
					<td class="d-flex justify-content-center col-4">Inactive Category</td>
					<td class="col-2"></td>
					<td class="d-flex justify-content-center col-4">Active Category</td>
				</tr>
				<tr class="row">
					
					<td class="d-flex justify-content-center col-4" id="inactivecell">
						<select name="inactive" class="custom-select bg-dark text-light" size="10" id="inactive">
						<% categories.forEach((category)=>{ %>
						<% if(category.status === 444){%>
						<option value="<%=category._id%>"><%=category.name%> </option>
						<%}})%>
						</select>						
					</td>
					<td class="d-flex flex-column justify-content-around">
						<div >
							<div class="d-flex justify-content-center">
								<button class="btn-sm btn-secondary w-100 mb-2" id="addbutton">
									Add >
								</button>
							</div>
							<div class="d-flex justify-content-center">
								<button class="btn-sm btn-secondary w-100 mt-2" id="removebutton">
									< Remove
								</button>
							</div>
						</div>
					</td>
					<td class="d-flex justify-content-center col-4">
						<select name="active" class="custom-select bg-dark text-light" size="10" id="active">
						<% categories.forEach((category)=>{%>
						<% if(category.status === 222){%>
						<option value="<%=category._id%>"><%=category.name%> </option>
						<%}})%>
						</select>
					</td>
				</tr>
			</tbody>
		</table>	
	</div>
</div>
<%- include('../../partials/admindash_footer.ejs') %>
<script src="/sc_static/scripts/admin/storecat.js" type="text/javascript"></script>
<%- include('../../partials/footer') %>