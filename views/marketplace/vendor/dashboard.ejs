<%- include('../../partials/header') %>
<%- include('../../partials/vendordash_header.ejs') %>	
<div class="col-lg-6 d-none d-lg-block my-5">
	<div  class="container">
		<div class="row mb-3">
			<div class="col-lg-6">
				<div class="container border border-secondary rounded p-3">
					<ul class="nav flex-column">
						<li class="nav-item">
							<p class="nav-link active text-light my-0">Users:<span><a href="#"> 1</a></span></p>
						</li>
						<li class="nav-item">
							<p class="nav-link text-light my-0">Stores:<span><a href="/stores/view"> <%=vendor.stores.length%> </a></span></p>
						</li>
						<li class="nav-item">
							<p class="nav-link text-light my-0">Malls:<span><a href="/malls/view"> <%=vendor.malls.length%> </a></span></p>
						</li>
						<li class="nav-item">
							<%if(vendor.status === 'blocked'){%>
							<p class="nav-link text-light my-0">Status:<span class="text-danger"> <%=vendor.status%></span></p>
							<%}else if(vendor.status === 'Awaiting Approval'){%>
							<p class="nav-link text-light my-0">Status:<span class="text-secondary"> <%=vendor.status%></span></p>
							<%}else{%>
							<p class="nav-link text-light my-0">Status:<span class="text-success"> <%=vendor.status%></span></p>
							<%}%>
						</li>
					</ul>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="container border border-secondary rounded p-3">
					<ul class="nav flex-column">
						<li class="nav-item">
							<p class="nav-link active text-light my-0">Max Users: <span><a href="#"><%=vendorLevel.maxUsers%></a></span></p>
						</li>
						<li class="nav-item">
							<p class="nav-link text-light my-0">Max Stores: <span><a href="#"> <%=vendorLevel.maxStores%> </a></span></p>
						</li>
						<li class="nav-item">
							<p class="nav-link text-light my-0">Max Malls: <span><a href="#"> <%=vendorLevel.mallAccess%> </a></span></p>
						</li>
						<li class="nav-item">
							<p class="nav-link text-light my-0">Package: <span><a href="#"> <%=vendorLevel.name%> </a></span></p>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-lg-6">
				<form>
					<div class="container border border-secondary rounded p-3">
						<ul class="nav flex-column">
							<li class="nav-item">
								<p class="nav-link text-light my-0">Enable Vendor Association</p>
							</li>
							<%if(vendor.associate){%>
							<li class="nav-item p-3">
								<button type="button" class="btn btn-success" id="assocbutton">Disable</button>
							</li>
							<%}else{%>
							<li class="nav-item p-3">
								<button type="button" class="btn btn-danger" id="assocbutton">Enable</button>
							</li>
							<%}%>
						</ul>
					</div>
				</form>
			</div>
			<div class="col-lg-6">
				<div class="container border border-secondary rounded p-3">
					<ul class="nav flex-column">
						<li class="nav-item">
							<p class="nav-link text-light my-0">Association Requests</p>
						</li>
						<li class="nav-item">
							<p class="nav-link text-light my-0">Requests: <span><a href="/vendor/associationrequests">Manage Requests </a></span></p>
						</li>
						<li class="nav-item">
							<p class="nav-link text-light my-0">Approved: <span><a href="#"> <%=vendor.users.length%> </a></span></p>
						</li>
						<li class="nav-item">
							
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include('../../partials/vendordash_footer.ejs') %>	
<script src="/sc_static/scripts/user/vendordash.js" type="text/javascript"></script>

<%- include('../../partials/footer') %>